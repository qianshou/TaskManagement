extends ../layout

block content
    h1 任务列表
    hr
    if task_list.length
        table.table.table-bordered
            tr
                th 任务
                th 编辑
                th 删除
            each task in task_list
                tr
                    td #{task.task}
                    td
                        a.btn.btn-primary(href='/tasks/edit/#{task._id}') 编辑
                    td
                        form(method='post',action='/tasks/#{task._id}?_method=DELETE')
                            button.btn(type='submit') 删除
    else
        p 没有任务，真轻松~
    hr
    p
        a(href='/tasks/new') 添加任务